{
    "name": "semantic-release-nexus",
    "description": "Semantic Release Plugin to Release to Nexus",
    "main": "index.js",
    "author": "collin-miller <colljmiller@gmail.com>",
    "license": "MIT",
    "devDependencies": {
        "@commitlint/config-conventional": "^15.0.0",
        "@jest/globals": "^27.3.1",
        "@semantic-release/commit-analyzer": "^9.0.2",
        "@semantic-release/exec": "^6.0.2",
        "@semantic-release/github": "^8.0.2",
        "@semantic-release/release-notes-generator": "^10.0.2",
        "@types/debug": "^4.1.7",
        "@types/jest": "^27.0.3",
        "@types/node": "^16.11.9",
        "@types/semantic-release": "^17.2.3",
        "@typescript-eslint/eslint-plugin": "^4.22.0",
        "@typescript-eslint/parser": "^5.4.0",
        "commitlint": "^15.0.0",
        "concurrently": "^6.4.0",
        "eslint": "^7.25.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-import-resolver-typescript": "^2.4.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.4.0",
        "git-cz": "^4.8.0",
        "husky": "^3.1.0",
        "jest": "^27.3.1",
        "prettier": "^2.2.1",
        "pretty-quick": "^3.1.0",
        "rimraf": "^3.0.2",
        "semantic-release": "^18.0.0",
        "ts-jest": "^27.0.7",
        "ts-node": "^10.4.0",
        "typescript": "^4.5.2"
    },
    "scripts": {
        "test": "yarn concurrently npm:test:lint npm:test:unit",
        "test:unit": "yarn rimraf coverage && yarn jest",
        "test:lint": "yarn eslint ./src/**/*.ts --max-warnings 0",
        "build": "yarn rimraf dist && yarn tsc && cp package.json dist && cp README.md dist && cp LICENSE dist",
        "commit": "yarn git-cz",
        "lint:staged": "yarn pretty-quick --staged"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn concurrently npm:test:unit npm:test:lint npm:lint:staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "jest": {
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "testEnvironment": "node",
        "transformIgnorePatterns": [
            "node_modules/(?!(aggregate-error|clean-stack|escape-string-regexp|indent-string)/)"
        ],
        "moduleDirectories": [
            "src",
            "node_modules"
        ],
        "collectCoverage": true,
        "coveragePathIgnorePatterns": [
            "dist/*"
        ],
        "coverageThreshold": {
            "global": {
                "functions": 100,
                "lines": 90
            }
        }
    },
    "dependencies": {
        "axios": "^0.24.0",
        "debug": "^4.3.3",
        "form-data": "^4.0.0"
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org/",
        "tag": "latest"
    }
}
